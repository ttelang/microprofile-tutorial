<?xml version="1.0" encoding="UTF-8"?>
<server description="MicroProfile User Service Server">

    <featureManager>
        <platform>microProfile-7.1</platform>
        <platform>jakartaEE-10.0</platform>
        <feature>restfulWS</feature>
        <feature>jsonp</feature>
        <feature>jsonb</feature>
        <feature>cdi</feature>
        <feature>servlet</feature>
        <feature>pages</feature>
    </featureManager>

    <httpEndpoint httpPort="6040" httpsPort="6041"
                  id="defaultHttpEndpoint" host="*" />

    <webApplication location="shipment.war" contextRoot="/shipment"/>
</server>